% --- NUEVOS COMANDOS AÑADIDOS ---

% Para 'for x in y'
\algblock[ForEach]{ForEach}{EndForEach}
\algnewcommand{\ForEach}[1]{\State \textbs{para cada} #1 \textbs{en} \textbs{hacer}}
\algrenewcommand{\EndForEach}{\textbs{fin para}}

% Para 'for i in range(...)' (Asumiendo 4 argumentos: var, inicio, fin, paso)
\algblock[PyFor]{PyFor}{EndPyFor}
\algnewcommand{\PyFor}[4]{\State \textbs{para} $\texttt{#1} \gets \texttt{#2}$ \textbs{hasta} $\texttt{#3}$ \textbs{con paso} $\texttt{#4}$ \textbs{hacer}}
\algrenewcommand{\EndPyFor}{\textbs{fin para}}

% Para '//' (división entera)
\newcommand{\PyFloorDiv}[0]{\mathop{\mathbf{div}}}

% Para 'lambda'
\newcommand{\PyLambda}[2]{\ensuremath{\lambda\, \texttt{#1} \colon #2}}

% Para 'None'
\newcommand{\PyNone}[0]{\texttt{null}}

